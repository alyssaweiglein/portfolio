---
export interface Props {
	linkedin: string;
  email: string;
}

const { linkedin, email } = Astro.props;
---

<form 
  name="contact" 
  action="/pages/success" 
  method="POST" 
  netlify-honeypot="bot-field" 
  data-netlify="true">
  <p>Connect with me on <a href={linkedin} target="_blank">Linkedin</a>, 
    send me an <a href={email} target="_blank">email</a>, or send a quick 
    note at the contact form below.</p>
    <br><br>
  <div class="flex">
    <input type="text" name="name" placeholder="Name" />
    <input type="email" name="email" placeholder="Email" />
  </div>
  <div class="flex">
    <textarea rows="5" name="message" placeholder="Message"></textarea>
  </div>
  <div class="flex">
    <input id="bot-field" name="bot-field" placeholder="Don't type anything here if you're human." />
  </div>
  <button type="submit">Send</button>
</form>


<style>
  form {
    max-width: 100%;
    margin: auto;
    text-align: center;
  }

  input, textarea {
    flex-grow: 1;
    margin-bottom: 10px;
    padding: 10px;
    background-color: rgb(252, 252, 252);
    border: 0;
    font-family: 'Golos Text', sans-serif;
    resize: none;
    border-radius: 3px;
  }

  input:focus, textarea:focus {
    outline: none;
  }

  #bot-field {
    background-color: rgb(231, 231, 231);
  }
  button {
    padding: 8px 20px;
  }

  .flex {
    justify-content: space-between;
    gap: 10px;
  }

  @media screen and (min-width: 600px) {
    form {
      max-width: 400px;
    }
  }
</style>